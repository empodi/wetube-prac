extends base 
include mixins/video

block content   
    div.profile__data  
        if user.avatarUrl === ""
            span.profile__no-image ðŸ˜€ No Profile Image...
        else
            img(src="/" + user.avatarUrl).avatar
        h3 #{user.username}'s Profile
        div.profile__user-email
            i.fas.fa-envelope 
            span=user.email
    h2.profile__uploaded_videos Uploaded Videos
    div.video-grid
        each video in videos
            +video(video)
        else    
            li Sorry nothing found...
        